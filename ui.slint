import { VerticalBox, HorizontalBox, Button } from "std-widgets.slint";

export struct CardUI {
    rank: string,
    suit: string,
    card_color: string,
}

component CardDisplay {
    in property <string> rank;
    in property <string> suit;
    in property <string> card_color;
    in property <bool> is_face_down;

    width: 50px;
    height: 70px;

    Rectangle {
        background: is_face_down ? @linear-gradient(180deg, #1a3a6a 0%, #0d2040 100%) : @linear-gradient(180deg, #ffffff 0%, #f0f0f0 100%);
        border-radius: 6px;
        border-width: is_face_down ? 3px : 2px;
        border-color: is_face_down ? #ffd700 : #cccccc;

        if !is_face_down: VerticalBox {
            padding: 3px;
            spacing: 0;
            alignment: space-between;

            Text {
                text: rank;
                font-size: 12px;
                color: card_color == "red" ? #cc0000 : #000000;
                font-weight: 800;
            }
            Text {
                text: suit;
                font-size: 20px;
                color: card_color == "red" ? #cc0000 : #000000;
            }
            Text {
                text: rank;
                font-size: 12px;
                color: card_color == "red" ? #cc0000 : #000000;
                font-weight: 800;
                horizontal-alignment: right;
            }
        }
        if is_face_down: Rectangle {
            border-radius: 4px;
            Rectangle {
                background: @linear-gradient(135deg, #3a5a8a 0%, #1a3a5a 50%, #0d2a4a 100%);
                width: 100%;
                height: 100%;
                border-radius: 4px;
            }
            Rectangle {
                background: @linear-gradient(135deg, #4a6a9a 0%, #2a4a6a 100%);
                width: 36px;
                height: 50px;
                x: 6px;
                y: 9px;
                border-radius: 4px;
                border-width: 2px;
                border-color: rgba(255, 215, 0, 0.4);
            }
            Text {
                text: "ðŸ‚ ";
                font-size: 16px;
                color: rgba(255, 255, 255, 0.3);
                x: 14px;
                y: 25px;
            }
        }
    }
}

component CommunityCard {
    in property <string> rank;
    in property <string> suit;
    in property <string> card_color;

    width: 45px;
    height: 62px;

    Rectangle {
        background: @linear-gradient(180deg, #ffffff 0%, #f0f0f0 100%);
        border-radius: 5px;
        border-width: 2px;
        border-color: #cccccc;

        VerticalBox {
            padding: 2px;
            spacing: 0;
            alignment: space-between;

            Text {
                text: rank;
                font-size: 10px;
                color: card_color == "red" ? #cc0000 : #000000;
                font-weight: 800;
            }
            Text {
                text: suit;
                font-size: 16px;
                color: card_color == "red" ? #cc0000 : #000000;
            }
            Text {
                text: rank;
                font-size: 10px;
                color: card_color == "red" ? #cc0000 : #000000;
                font-weight: 800;
                horizontal-alignment: right;
            }
        }
    }
}

